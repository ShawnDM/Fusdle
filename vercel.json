{
  "version": 2,
  "buildCommand": "vite build && mkdir -p dist/public && cp -f public/favicon.ico public/favicon.png public/preview.png public/sitemap.xml public/robots.txt dist/public/ || true",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "routes": [
    {
      "src": "^/favicon.ico$",
      "dest": "/favicon.ico",
      "headers": { "cache-control": "public, max-age=86400" }
    },
    {
      "src": "^/preview.png$",
      "dest": "/preview.png",
      "headers": { "cache-control": "public, max-age=86400" }
    },
    {
      "src": "^/sitemap.xml$",
      "dest": "/sitemap.xml",
      "headers": { "content-type": "application/xml", "cache-control": "public, max-age=3600" }
    },
    {
      "src": "^/robots.txt$",
      "dest": "/robots.txt",
      "headers": { "content-type": "text/plain", "cache-control": "public, max-age=3600" }
    },
    {
      "src": "^/(.+)\\.(png|jpg|jpeg|gif|ico|xml|txt|svg)$",
      "dest": "/$1.$2",
      "headers": { "cache-control": "public, max-age=86400" }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}